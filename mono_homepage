    <script>
        // Particles
    // function createParticles() {
    //   const container = document.getElementById('particles');
    //   for (let i=0;i<50;i++){
    //     const p=document.createElement('div');
    //     p.className='particle';
    //     p.style.left=Math.random()*100+'%';
    //     p.style.top=Math.random()*100+'%';
    //     p.style.animationDelay=Math.random()*8+'s';
    //     container.appendChild(p);
    //   }
    // }
    // createParticles();

    // Fetch global values
    function updateValues(){
      fetch("http://127.0.0.1:1880/globalValues")
      .then(r=>r.json())
      .then(data=>{
        document.getElementById("machineName").textContent=data.Machine_name||"N/A";
        document.getElementById("runtime").textContent=data.Runtime||"00:00:00";
        document.getElementById("speedovr").textContent=data.SpeedOvr||"100%";
        document.getElementById("feedrateovr").textContent=data.FeedRateOvr||"100%";
        document.getElementById("operatingMode").textContent=data.Operating_Mode||"N/A";
        document.getElementById("program").textContent=data.Program||"N/A";
        document.getElementById("currentJob").textContent=data.Current_Job||"N/A";
        document.getElementById("shiftStatus").textContent=data.Shift_Status||"N/A";
        document.getElementById("partcount").textContent=data.P_art_Count||"0";
        document.getElementById("targetParts").textContent=data.Target_Parts||"0";
        document.getElementById("alarms").textContent=data.Alarms||"0";

// <!-- 
//         // Machine status
//         const status=data.Machine_status||"Unknown";
//         const led=document.getElementById("ledStatus");
//         const statusEl=document.getElementById("machineStatus");
//         statusEl.textContent=status;
//         led.className="led-indicator";
//         if(status.toLowerCase().includes("stop")||status.toLowerCase().includes("off")) led.classList.add("led-off");
//         else if(status.toLowerCase().includes("idle")) led.classList.add("led-idle");
//         else if(status.toLowerCase().includes("run")) led.classList.add("led-running");

//         // Alarm highlight
//         const alarmCard=document.querySelector(".alarm-card");
//         if(parseInt(data.Alarms)>0) alarmCard.classList.add("alarm-active");
//         else alarmCard.classList.remove("alarm-active");
//       })
//       .catch(e=>console.error("Error fetching values:",e)); -->


            const status = data.Machine_status || "Unknown";
            document.getElementById("statusText").textContent = status;
            
            const statusCard = document.querySelector(".machine-status");
            statusCard.classList.remove("status-off", "status-idle", "status-running");
            
            if (status.toLowerCase().includes("stop") || status.toLowerCase().includes("off"))
            statusCard.classList.add("status-off");
            else if (status.toLowerCase().includes("idle"))
            statusCard.classList.add("status-idle");
            else if (status.toLowerCase().includes("run"))
            statusCard.classList.add("status-running");
            
            // Alarm highlight
            const alarmCard=document.querySelector(".alarm-card");
            if(parseInt(data.Alarms)>0) alarmCard.classList.add("alarm-active");
            else alarmCard.classList.remove("alarm-active");
            })
            
    }
    setInterval(updateValues,5000);
    updateValues();
    </script>
